@page
@model LoginModel



@{
    ViewData["Title"] = "Log in";
}


<div class="icon-title text-center m-auto pb-3">
    <img src="~/images/new_logo.svg" class="img-fluid" alt="" />
</div>
<div class="d-flex justify-content-center">
    <section id="login-main-panel" class="card login-panel p-2">
        <h1>@ViewData["Title"]</h1>
        <p class="subtext mb-0">Use a local account to log in.</p>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-2">
                <label class="control-label" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label class="control-label" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <div class="custom-control custom-checkbox">
                    <input id="RememberMe" type="checkbox" class="custom-control-input" asp-for="Input.RememberMe" />
                    <label class="custom-control-label" for="RememberMe">
                        @Html.DisplayNameFor(m =>
                        m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="d-flex justify-content-around">
                <button type="submit" class="btn btn-primary mx-1">Log in</button>
                <button class="btn btn-default text-decoration-none mx-1" asp-page="./Register"
                        asp-route-returnUrl="@Model.ReturnUrl">
                    Register as a new user
                </button>

            </div>
            <div class="pt-2 font-12 d-flex justify-content-between">

                <a class="text-decoration-none mx-auto" id="forgot-password" asp-page="./ForgotPassword">
                    Forgot your
                    password?
                </a>

                <a class="text-decoration-none mx-auto" id="resend-confirmation"
                   asp-page="./ResendEmailConfirmation">Resend email confirmation</a>

            </div>
        </form>
    </section>
</div>
